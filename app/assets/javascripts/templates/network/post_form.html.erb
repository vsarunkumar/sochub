
<div class='panel-body'>
  <div class='row'>
    <div class='col-md-1'>
    </div>
    <div class='col-md-2'>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td><button ng-click="soclogin()"><%= image_tag("connect.png", width: '100%', height: '75') %></button></td>
          </tr>
          <tr>
            <td>
              <button ng-click="twitterPostForm()">
                <%= image_tag("twitter.jpg", width: '100%', height: '75') %>
              </button>
            </td>
          </tr>
          <tr>
            <td>
              <button ng-click="postForm()">
                <%= image_tag("fb.png", width: '100%', height: '75') %>
              </button>
            </td>
          </tr>
          <tr>
            <td><%= image_tag("linkedin.png", width: '100%', height: '75') %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class='col-md-1'>
    </div>
    <div class='col-md-5'>
      <div class='row'>    

    		<form class="form-horizontal" role="form" class="edit-user">
				  <div class="form-group" ng-class="{'has-warning has-feedback':errors.name}">
				    <div class="col-md-12">
				      <textarea name="post" class="form-control" cols="5" rows="10" ng-model="post">
				      </textarea>
				    </div>
				  </div>
				  <div class="form-group">
				    <div class="col-md-offset-1 col-md-2">
				      <button class="btn btn-default" ng-click="cancel()"> Cancel</button>
				    </div>
				    <div class="col-md-3 text-right">
				      <button class="btn btn-primary" ng-click="save()"> Post Now </button>
				    </div>
            <div class="col-md-3 text-right">
              <select>
                <option>Scheduled At</option>
                <option>Scheduled Next</option>
                <option>Add to Quene</option>
              </select>
            </div>
				  </div>
        </div>

        <div> 
          <ul class="list-group">
            <li ng-repeat="post in posts" class="list-group-item" style="padding:30px">
              {{ post.message }} <span class="badge">{{ post.scheduled_at | date }}</span>
            </li>
          </ul>
        </div>

    </div>
    <div class='col-md-3'>
      
    </div>
  </div>
</div>


